<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:padding="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Toolbar.TitleText"
                android:layout_marginEnd="100dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/kido_list"
                tools:text="fdkjsgsnkdfg jkdfgnsdkjgn dfgn sdkjgnsdfk jgnsdfgn sdn" />

            <TextView
                android:id="@+id/chronometer"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/start"
                style="@style/ButtonChronometer"
                android:layout_marginEnd="5dp"
                android:text="@string/start" />

            <Button
                android:id="@+id/stop"
                style="@style/ButtonChronometer"
                android:layout_marginStart="5dp"
                android:text="@string/stop" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/AppTheme.HorizontalViewDivider"
            android:layout_marginVertical="5dp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-5169531562006723/8726791033" />

        <View
            android:id="@+id/adDivider"
            style="@style/AppTheme.HorizontalViewDivider"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_to_do"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_kido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_kido" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add"
            app:rippleColor="@color/primary" />

        <include
            android:id="@+id/list_kido_empty"
            layout="@layout/view_kido_empty"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>